<div class = "container">
	<h1>Welcome, <%=current_user.name%>! Your id is <%=current_user.id%></h1>
	You have no plans. Create a new plan today. <br>
	 <%= form_for(:plan, url: plan_path) do |f| %>
	 	<%=Time.now.strftime("%d/%m/%Y")%>
		<%= f.text_field :ambition%>
		<%= f.submit %>
	 <%end%>
	 <table border="1px">
	 	<tr>
	 		<th>
	 			Date
	 		</th>
	 		<th>
	 			Plan
	 		</th>
	 		<th>
	 			Accomplishment
	 		</th>
	 	</tr>
	 	<%= @plans.each do |plan| %>
	 		<tr>
	 			<td>
	 				<%=plan.date%>
	 			</td>
	 			<td>
	 				<%=plan.ambition%>
	 			</td>
	 			<td>
	 				<%=plan.accomplishment%>
	 			</td>
	 		</tr>
	 	<%end%>
	 </table>
</div>

