<h1>Welcome, <%=current_user.name%>!</h1>
<% if logged_in?(:admin, :manager)%>
	<b>Note: Our systems have detected that you are an admin. You can 
	<%= link_to "view all users", custom_users_path%> here.</b>
<%end%><br>
<br>
<%if Time.now.hour > 19 %>
	<%=form_for(@plan) do |f|%>
		<div class = "form-group">
			<%=f.label "Edit/write down what you achieved today"%>
			<%=f.text_field :accomplishment, class: "form-control"%>
		</div>
	 	<%=f.submit :Submit, class: "btn btn-primary"%>
	<%end%>
<%else%>
	<%=form_for(@plan) do |f| %>
		<div class = "form-group">
			<%=f.label "What do you plan to learn today? (Make sure you separate each line with a new line)"%>
			<%=f.text_area :ambition, id: "ambition-form-field", class: "form-control"%>
		</div>
		<p style="color:#f44336">
			<%=18-Time.now.hour%> hour(s) left to achieve your goals!
		</p>
		<%=f.submit "Add Plan", class: "btn btn-primary"%>
	<%end%>
<%end%>
<br>

<p>
	<h3>Here's what your history looks like</h3>
</p>
<table class = "table">
	<tr>
		<th>
			Date
		</th>
		<th>
			Plan
		</th>
		<th>
			Accomplishment
		</th>
	</tr>
	<% @plans.each do |plan| %>
		<tr>
			<td>
				<%=plan.date%>
			</td>
			<td>
				<%=plan.ambition.gsub(/\n/, '<br>').html_safe%>
			</td>
			<td>
				<%=plan.accomplishment%>
			</td>
		</tr>
	<%end%>
</table>
<script type="text/javascript">
	function test(){
		var text = document.getElementById("ambition-form-field");
		if(text.value != ""){
			text.value += "\n"; 
		}
	}	
	window.onLoad= test();
</script>
